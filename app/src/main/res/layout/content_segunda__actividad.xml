<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.isabel.trying.Segunda_Actividad"
    tools:showIn="@layout/activity_segunda__actividad">


    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_camera" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameInfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp">

        <TextView
            android:id="@+id/informacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/informacion"
            android:textAppearance="?attr/textAppearanceLargePopupMenu" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/Math"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FrameInfor"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/Masinfor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/masInfor"
            android:textAppearance="?attr/textAppearanceLargePopupMenu" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/separador"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/Math"
        android:background="#dd00f5"
        android:orientation="horizontal" />

    <FrameLayout
        android:id="@+id/Actualizaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separador"
        android:layout_marginTop="25dp"
       >

        <TextClock
            android:id="@+id/reloj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/myshape" />


        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </CalendarView>


    </FrameLayout>


</RelativeLayout>
